{
  "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "es2015",
      "declaration": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@/grpc-connect": [
          "grpc-connect/src"
        ],
        "@/grpc-connect/*": [
          "grpc-connect/src/*"
        ],
      }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "tests"]
}